.PHONY: all clean

CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -rvf
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	@echo $(CC) $(CFLAGS) -c -o main.o main.c
	@echo $(CC) $(CFLAGS) -c -o school.o school.c
	@echo $(CC) main.o school.o -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	clean oclean
re: fclean all
